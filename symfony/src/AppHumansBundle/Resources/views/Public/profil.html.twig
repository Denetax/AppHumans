{% extends "AppHumansBundle::layout.html.twig" %}
{% block css %}
    <link type="text/css" rel="stylesheet" href="../../../bootstrap.css">
    <link type="text/css" rel="stylesheet" href="../../../bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="../../../styles.css">
    <link type="text/css" rel="stylesheet" href="../../../scrolling-nav.css">
    <script type="application/javascript" src="../../../jquery.js"></script>
    <script type="application/javascript" src="../../../bootstrap.js"></script>
    <script type="application/javascript" src="../../../scrolling-nav.js"></script>
{% endblock %}
{% block nav %}{{ parent() }}{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-lg-8">
        <div id="form-login">
<h1>Bonjour {{ user.lastname }} {{ user.name }},</h1>

<h2>Information Utilisateur :</h2>

Email : {{ user.email }}<br>
Tel : {{ user.phone }}<br>
Genre : {{ user.sexe }}<br>
Année de naissance : {{ user.yearborn|date('y/m/d') }}<br>
Adresse : {{ user.adress }}<br>
Code Postal : {{ user.cp }}<br>
Ville : {{ user.city }}<br>

<h2>Associations affilié :</h2>
{% if user.associations is not null %}
Nom : {{ user.associations.name }}<br>
Adress : {{ user.associations.adress }}<br>
Tel : {{ user.associations.phone }}<br>
Email : {{ user.associations.email }}<br>
Departement : {{ user.associations.department }}
{% else %}
    Aucune association
{% endif %}
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
{% endblock %}